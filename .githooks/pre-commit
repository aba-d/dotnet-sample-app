#!/bin/bash
# Run Maven build and tests before commit

echo "🔹 Running Dot Net build and tests..."
dotnet restore
dotnet build
if [ $? -ne 0 ]; then
    echo "❌ Dot Net build failed! Commit aborted."
    exit 1
fi

dotnet test
if [ $? -ne 0 ]; then
    echo "❌ Unit tests failed! Commit aborted."
    exit 1
fi

echo "✅ Dot Net build and tests passed. Proceeding with commit."
